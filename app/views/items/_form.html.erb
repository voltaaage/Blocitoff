<div class="col-md-4">
  <%= form_for [user, user.items.new] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter to do item" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter a description of the task" %>
    </div>
    <div class="form-group">
      <%= f.label :due_date %>
      <%= date_select(:item,:due_date) %>
    </div>
    <%= f.submit "Save", class: 'btn btn-success' %>
  <% end %>   
</div>
