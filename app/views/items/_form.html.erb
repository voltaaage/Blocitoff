<%= form_for [user, user.items.new] do |f| %>
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-3">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter to do item" %>
    </div>
    <div class="col-md-3">
      <%= f.label :due_date %><br>
      <%= date_select(:item,:due_date) %>
    </div>
    <div class="col-md-4">
      <%= f.label :description %><br>
      <%= f.text_area :description, rows: 3, class: 'form-control', placeholder: "Enter a description of the task" %>
    </div>
    <br>
  </div>
  <div class="row">
    <div class="col-md-1">
    </div>
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %> 