<tr id="item-<%= item.id %>">
  <td><%= link_to "", item_complete_path(item.id), remote: true, method: :put, class: 'glyphicon glyphicon-ok' %></td>
  <td><%= item.name %></td>
  <td class="due-date"><%= item.due_date %></td>
  <td><%= item.description %></td>
  <td><%= item.days_left %></td>
  <td><%= link_to "", [user,item], method: :delete, remote: true, class: 'glyphicon glyphicon-remove', data: {confirm: 'Are you sure?' } %></td>
</tr>